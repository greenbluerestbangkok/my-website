# Railway Environment Variables
NODE_ENV=production
PORT=8080

# Database (ใช้ MongoDB Atlas หรือ Railway MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/good-content

# JWT Secret (เปลี่ยนเป็นค่าที่ปลอดภัย)
JWT_SECRET=good-content-super-secure-jwt-secret-key-2024-production-railway

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-app.railway.app/api/auth/gmail/callback

# Session Secret
SESSION_SECRET=good-content-session-secret-key-2024-production

# Google AI API
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Frontend URL (Railway จะให้ URL อัตโนมัติ)
FRONTEND_URL=https://your-app.railway.app

# CORS Configuration
CORS_ORIGIN=https://your-app.railway.app
